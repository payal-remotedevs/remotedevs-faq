<T3DataStructure>
    <sheets>
    <!--
			################################
			  SHEET General Settings
			################################
		-->
        <sDEF>
            <ROOT>
                <sheetTitle>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.tab.settings</sheetTitle>
                <type>array</type>
                <el>
                    <!-- Order field -->
                    <settings.orderField>
                        <label>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.orderField</label>
                       <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0" type="array">
                                    <numIndex index="0"></numIndex>
                                    <numIndex index="1"></numIndex>
                                </numIndex>
                                <numIndex index="1" type="array">
                                    <numIndex index="0">LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.orderField.title</numIndex>
                                    <numIndex index="1">title</numIndex>
                                </numIndex>
                                <numIndex index="2" type="array">
                                    <numIndex index="0">LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.orderField.sorting</numIndex>
                                    <numIndex index="1">sorting</numIndex>
                                </numIndex>
                            </items>
                        </config>
                    </settings.orderField>
                     <!-- Order direction -->
                    <settings.orderDirection>
                        <label>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.orderDirection</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0" type="array">
                                    <numIndex index="0"></numIndex>
                                    <numIndex index="1"></numIndex>
                                </numIndex>
                                <numIndex index="1">
                                   <numIndex index="0">LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.orderDirection.ascending</numIndex>
                                    <numIndex index="1">asc</numIndex>
                                </numIndex>
                                <numIndex index="2">
                                    <numIndex index="0">LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.orderDirection.descending</numIndex>
                                    <numIndex index="1">desc</numIndex>
                                </numIndex>
                            </items>
                        </config>
                    </settings.orderDirection>

                    <!-- Query Limit -->
                    <settings.queryLimit>
                        <label>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.queryLimit</label>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <eval>int</eval>
                        </config>
                    </settings.queryLimit>

                    <!-- Category Mode conjunction -->
                    <settings.categoryModeConjunction>
                        <label>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.categoryModeConjunction</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0" type="array">
                                    <numIndex index="0">
                                        LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.categoryModeConjunction.ignore</numIndex>
                                    <numIndex index="1"></numIndex>
                                </numIndex>
                                <numIndex index="1" type="array">
                                    <numIndex index="0">
                                        LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.categoryModeConjunction.or</numIndex>
                                    <numIndex index="1">OR</numIndex>
                                </numIndex>
                                <numIndex index="2" type="array">
                                    <numIndex index="0">
                                        LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.categoryModeConjunction.and
                                    </numIndex>
                                    <numIndex index="1">AND</numIndex>
                                </numIndex>
                                <numIndex index="3" type="array">
                                    <numIndex index="0">
                                        LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.categoryModeConjunction.notor
                                    </numIndex>
                                    <numIndex index="1">NOTOR</numIndex>
                                </numIndex>
                                <numIndex index="4" type="array">
                                    <numIndex index="0">
                                        LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.categoryModeConjunction.notand
                                    </numIndex>
                                    <numIndex index="1">NOTAND</numIndex>
                                </numIndex>
                            </items>
                        </config>
                    </settings.categoryModeConjunction>
                    <settings.categories>
                        <label>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.categories</label>
                        <config>
                            <type>select</type>
                            <renderType>selectTree</renderType>
                            <foreign_table>tx_rdfaq_domain_model_category</foreign_table>
                            <foreign_table_where>AND tx_rdfaq_domain_model_category.sys_language_uid IN (-1,0) ORDER BY tx_rdfaq_domain_model_category.title ASC</foreign_table_where>
                            <treeConfig>
                                <parentField>parentcategory</parentField>
                                <appearance>
                                    <expandAll>true</expandAll>
                                    <showHeader>true</showHeader>
                                </appearance>
                            </treeConfig>
                            <size>10</size>
                            <autoSizeMax>20</autoSizeMax>
                            <minitems>0</minitems>
                            <maxitems>999</maxitems>
                        </config>
                    </settings.categories>

                    <settings.includeSubcategories>
                        <label>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.includeSubcategories</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.includeSubcategories>
                    <settings.storagePage>
                        <label>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.storagePage</label>
                        <config>
                            <type>group</type>
                            <allowed>pages</allowed>
                            <size>3</size>
                            <maxitems>50</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                </suggest>
                            </wizards>
                        </config>
                    </settings.storagePage>

                </el>
            </ROOT>
        </sDEF>
           <!-- Sheet: Additional -->
        <additional>
            <ROOT>
                <sheetTitle>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.tab.additional</sheetTitle>
                <type>array</type>
                <el>
                    <!-- disable overwriteDemand -->
                    <settings.disableOverwriteDemand>
                        <label>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.disableOverwriteDemand</label>
                        <config>
                            <type>check</type>
                            <default>1</default>
                        </config>
                    </settings.disableOverwriteDemand>
                </el>
            </ROOT>
        </additional>
        <pagination>
            <ROOT>
                <sheetTitle>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.tab.pagination</sheetTitle>
                <type>array</type>
                <el>

                    <!-- Enable pagination -->
                    <settings.enablePagination>
                        <label>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.enablePagination</label>
                        <config>
                            <type>check</type>
                            <default>0</default>
                        </config>
                    </settings.enablePagination>

                    <!-- Items per page -->
                    <settings.displayItemsPerPage>
                        <label>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.displayItemsPerPage</label>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <eval>int</eval>
                            <default>10</default>
                        </config>
                    </settings.displayItemsPerPage>

                    <!-- Maximum number of pages -->
                    <settings.maxPagesNum>
                        <label>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.maxPagesNum</label>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <eval>int</eval>
                            <default>10</default>
                        </config>
                    </settings.maxPagesNum>

                </el>
            </ROOT>
        </pagination>

        <!-- Sheet: Template -->
        <template>
            <ROOT>
                <sheetTitle>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.tab.template</sheetTitle>
                <type>array</type>
                <el>
                    <!-- Template Layout -->
                    <settings.templateLayout>
                        <label>LLL:EXT:rd_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.templateLayout</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <itemsProcFunc>RemoteDevs\RdFaq\Hooks\ItemsProcFunc->userTemplateLayout</itemsProcFunc>
                            <items>
                                <numIndex index="0" type="array">
                                    <numIndex index="0"></numIndex>
                                    <numIndex index="1"></numIndex>
                                </numIndex>
                            </items>
                        </config>
                    </settings.templateLayout>
                </el>
            </ROOT>
        </template>
    </sheets>
</T3DataStructure>